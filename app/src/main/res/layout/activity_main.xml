<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCoinContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#F5F5F5"
        android:visibility="gone"
        tools:visibility="visible">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"> <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/coin"/>

            <TextView
                android:id="@+id/txtCoinCount"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="top|end"
                android:background="@drawable/bg_badge_red"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold"
                android:gravity="center"/>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="40dp"
        android:paddingBottom="40dp"
        android:clipToPadding="false">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMenuMain"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_glass_menu"
                android:orientation="horizontal"
                android:weightSum="6"
                android:gravity="center_vertical"
                android:elevation="8dp"
                android:paddingHorizontal="12dp">

                <ImageView
                    android:id="@+id/navHome"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="13dp"
                    android:src="@drawable/ic_nav_home"
                    app:tint="#ff4700"/>

                <ImageView
                    android:id="@+id/navStickers"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="13dp"
                    android:src="@drawable/ic_nav_stickers"
                    app:tint="#000000"/>

                <ImageView
                    android:id="@+id/navThemes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="13dp"
                    android:src="@drawable/ic_nav_themes"
                    app:tint="#000000"/>

                <ImageView
                    android:id="@+id/navSearch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:padding="13dp"
                    android:src="@drawable/ic_nav_search"
                    app:tint="#000000"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/navFavorites"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="13dp"
                    android:src="@drawable/ic_nav_favorites"
                    app:tint="#000000"/>

                <FrameLayout
                    android:id="@+id/frameNavCard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/navCardId"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="13dp"
                        android:src="@drawable/ic_nav_cardid"
                        android:clickable="false"
                        app:tint="#000000"/>

                    <ImageView
                        android:id="@+id/badgeNotification"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/campana"
                        android:visibility="gone"
                        tools:visibility="visible"/>
                </FrameLayout>

                <ImageView
                    android:id="@+id/navInstagram"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="13dp"
                    android:src="@drawable/ic_nav_instagram"
                    app:tint="#000000"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <ImageView
        android:id="@+id/fabNews"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="130dp"
        android:elevation="20dp"
        android:visibility="gone"
        tools:src="@drawable/ic_launcher_background" />

    <ProgressBar
        android:id="@+id/progressBarMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="20dp"
        android:indeterminateTint="#12a2cf" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>