<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fitsSystemWindows="false">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:clipToPadding="false"
        android:paddingBottom="100dp"> <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Favorites"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingHorizontal="24dp"
            android:paddingTop="60dp"
            android:paddingBottom="16dp"
            android:letterSpacing="-0.02"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#000000">

            <ImageView
                android:id="@+id/imgListBanner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@android:color/darker_gray"/>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardSetColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_marginTop="-10dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/imgCurrentColorPreview"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_circle_white"
                    android:backgroundTint="#CCCCCC" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Color"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set your default style color"
                        android:textColor="#808080"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:alpha="0.5"
                    android:src="@drawable/ic_edit"
                    app:tint="#000000" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/btnLoginFavorites"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Login to Sync"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#000000"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="30dp"
            app:cornerRadius="25dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/lblFavPacks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gacha Sticker Packs"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingHorizontal="24dp"
            android:layout_marginBottom="12dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFavPacks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="30dp"/>


        <TextView
            android:id="@+id/lblFavWallpapers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wallpapers"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingHorizontal="24dp"
            android:layout_marginBottom="12dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFavWallpapers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/lblFavWidgets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Widget Themes"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingHorizontal="24dp"
            android:layout_marginBottom="12dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFavWidgets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/lblFavBattery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Battery Themes"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingHorizontal="24dp"
            android:layout_marginBottom="12dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFavBattery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/txtEmptyFavorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No favorites yet ðŸ’”"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#BDBDBD"
            android:layout_marginTop="50dp"
            android:visibility="gone" />

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>