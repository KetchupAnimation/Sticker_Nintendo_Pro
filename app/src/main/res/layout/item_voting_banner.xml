<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#202020">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgVoteBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_voting_bg_placeholder"
            tools:ignore="ContentDescription" />

        <View
            android:id="@+id/viewStripBlack"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="#CC000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/viewStripPattern"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_pattern_tiled"
            android:alpha="0.3"
            app:layout_constraintTop_toTopOf="@+id/viewStripBlack"
            app:layout_constraintBottom_toBottomOf="@+id/viewStripBlack"
            app:layout_constraintStart_toStartOf="@+id/viewStripBlack"
            app:layout_constraintEnd_toEndOf="@+id/viewStripBlack" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/lblOptionA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="MARIO"
            android:fontFamily="sans-serif-black"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:gravity="center"
            android:textAllCaps="true"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="0"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guidelineVertical" />

        <TextView
            android:id="@+id/lblOptionB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="LUIGI"
            android:fontFamily="sans-serif-black"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:gravity="center"
            android:textAllCaps="true"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="0"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/guidelineVertical"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/txtVS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VS"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="50sp"
            app:layout_constraintTop_toTopOf="@+id/viewStripBlack"
            app:layout_constraintBottom_toBottomOf="@+id/viewStripBlack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/txtPercentA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45%"
            android:fontFamily="sans-serif-black"
            android:textColor="#FF0099"
            android:textSize="48sp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toStartOf="@+id/txtVS"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtVS" />

        <TextView
            android:id="@+id/txtPercentB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="55%"
            android:fontFamily="sans-serif-black"
            android:textColor="#00FFCC"
            android:textSize="48sp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/txtVS"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtVS" />

        <TextView
            android:id="@+id/txtVoteDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENDS IN 2 DAYS â€¢ 14:00 PM"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/imgVoteOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_voting_bg_over"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>