<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9000000"
    android:gravity="center">

    <ImageView
        android:id="@+id/imgRewardGlow"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:src="@drawable/winner_circle"
        android:alpha="0" />

    <TextView
        android:id="@+id/txtRewardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/holoRewardContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:text="YOU GOT..."
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:alpha="0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/holoRewardContainer"
        android:layout_width="220dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:alpha="0">

        <ImageView
            android:id="@+id/imgRewardItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@android:color/darker_gray" />

        <com.ketchupstudios.Switchstickerapp.HoloCardView
            android:id="@+id/holoEffectOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/imgRewardBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/wgacha_carab" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnClaimReward"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@id/holoRewardContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="28dp"
        app:cardBackgroundColor="#2196F3"
        android:clickable="true"
        android:focusable="true"
        android:alpha="0"
        android:foreground="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/txtClaimBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="CLAIM REWARD"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>