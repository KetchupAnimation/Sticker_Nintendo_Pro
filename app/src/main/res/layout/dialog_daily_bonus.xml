<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DAILY BONUS!"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:fontFamily="sans-serif-black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Come back every day for rewards"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginTop="4dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/coin"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+3 Coins"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#FFC107"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watch a short video to claim"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#666666"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btnClaimBonus"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="CLAIM REWARD ðŸŽ¬"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:cornerRadius="25dp"/>

        <TextView
            android:id="@+id/btnCloseBonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No thanks, maybe later"
            android:textColor="#999999"
            android:layout_marginTop="16dp"
            android:textSize="12sp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>