<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <ImageView
        android:id="@+id/imgWallpaperPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="#E0E0E0"
        android:src="@android:color/transparent" />

    <com.ketchupstudios.Switchstickerapp.HoloCardView
        android:id="@+id/holoEffectView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <androidx.cardview.widget.CardView
        android:id="@+id/badgeNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#D50000"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        android:layout_gravity="top|start"
        android:layout_margin="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtBadgeNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textStyle="bold"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/badgePremiumWall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFD700"
        app:cardCornerRadius="12dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_lock_lock"
            android:padding="4dp"
            app:tint="#000000"/>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/btnFavoriteWall"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|start"
        android:layout_margin="1dp"
        android:padding="12dp"
        android:src="@drawable/ic_heart_outline"
        app:tint="#FFFFFF"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    <ImageView
        android:id="@+id/imgGiftOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:elevation="10dp"/>

</androidx.cardview.widget.CardView>