<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:paddingBottom="100dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="50dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID Wallet"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@+id/btnMenu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_contac"
                    android:padding="8dp"
                    app:tint="#333333"
                    android:layout_alignParentEnd="true"
                    android:elevation="4dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardMyWallet"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    app:layout_constraintDimensionRatio="H,576:417"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="10dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipChildren="false"
                        android:clipToPadding="false">

                        <ImageView
                            android:id="@+id/imgCardBg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:background="#ca3537" />

                        <com.ketchupstudios.Switchstickerapp.HoloCardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <RelativeLayout
                            android:id="@+id/containerFront"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_alignParentBottom="true"
                                android:padding="20dp">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/qrContainerFront"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:layout_marginBottom="10dp"
                                    android:visibility="gone"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="0dp"
                                    app:cardBackgroundColor="#FFFFFF">
                                    <ImageView
                                        android:id="@+id/imgQrFront"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="fitCenter"
                                        android:padding="6dp"/>
                                </androidx.cardview.widget.CardView>
                                <TextView
                                    android:id="@+id/txtCardName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="LOADING..."
                                    android:textSize="22sp"
                                    android:textStyle="bold"
                                    android:textColor="#FFFFFF"
                                    android:shadowColor="#80000000" android:shadowDx="2" android:shadowDy="2" android:shadowRadius="4"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="FRIEND CODE:"
                                    android:textSize="10sp"
                                    android:textColor="#DDFFFFFF"
                                    android:layout_marginTop="4dp"/>
                                <TextView
                                    android:id="@+id/txtCardCode"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="SW-XXXX-XXXX-XXXX"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="#FFFFFF"
                                    android:fontFamily="monospace"
                                    android:letterSpacing="0.05"
                                    android:shadowColor="#80000000" android:shadowDx="2" android:shadowDy="2" android:shadowRadius="4"/>
                                <TextView
                                    android:id="@+id/txtCardArtist"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="9sp"
                                    android:textStyle="italic"
                                    android:textColor="#CCFFFFFF"
                                    android:layout_marginTop="8dp"
                                    android:shadowColor="#80000000" android:shadowDx="1" android:shadowDy="1" android:shadowRadius="2"/>
                            </LinearLayout>
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/nintendo_switch_icon"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="15dp"
                                android:alpha="0.9"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/containerBack"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:padding="30dp"
                            android:gravity="center_horizontal">

                            <FrameLayout
                                android:id="@+id/myReactionsLayer"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clipChildren="false"
                                android:clipToPadding="false"
                                android:alpha="0.9" />
                            <androidx.cardview.widget.CardView
                                android:id="@+id/qrContainer"
                                android:layout_width="130dp"
                                android:layout_height="130dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="50dp"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#FFFFFF">

                                <ImageView
                                    android:id="@+id/imgQrCode"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitCenter"
                                    android:padding="5dp"/>
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/txtScanLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/qrContainer"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:text="SCAN ME"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="10sp"
                                android:shadowColor="#80000000" android:shadowDx="2" android:shadowDy="2" android:shadowRadius="0"/>
                        </RelativeLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/carddesing"
                            android:scaleType="fitXY"/>

                        <ImageView
                            android:id="@+id/btnFlipWallet"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_flip"
                            android:layout_gravity="top|end"
                            android:layout_margin="12dp"
                            app:tint="#FFFFFF"
                            android:alpha="0.7"/>

                        <ImageView
                            android:id="@+id/btnEditWallet"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_edit"
                            android:layout_gravity="top|start"
                            android:layout_margin="12dp"
                            app:tint="#FFFFFF"
                            android:alpha="0.7"/>

                    </FrameLayout>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/btnShareHome"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Share Card"
                android:backgroundTint="#25D366"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="25dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardMyStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="50dp"
                android:layout_marginTop="-20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="26dp"
                    android:paddingVertical="14dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_edit"
                        app:tint="#ff4700" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtMyStatusTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/status_ready"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/txtMyStatusGame"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/witty_subtitle"
                            android:textColor="#888888"
                            android:textSize="12sp"
                            android:visibility="gone"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:src="@drawable/ic_zigzag"
                app:tint="#CCCCCC"
                android:scaleType="centerCrop"
                android:alpha="0.5"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/txtFriendCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Friend List 0/30"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFriendsHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"/>

            <LinearLayout
                android:id="@+id/emptyStateView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="30dp"
                android:alpha="0.5"
                android:visibility="gone">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/nintendo_switch_icon"
                    app:tint="#999999"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No friends yet"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnScanQr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#ca3537">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_nav_search"
                app:tint="#FFFFFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SCAN FRIEND QR"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>