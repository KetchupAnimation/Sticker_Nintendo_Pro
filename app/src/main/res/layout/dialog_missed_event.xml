<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/boton_redondo_verde"
            android:backgroundTint="#FFF3E0"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@android:drawable/ic_menu_recent_history"
                android:layout_gravity="center"
                app:tint="#FB8C00" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Too Late!"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This exclusive reward was only available on that specific day."
            android:textSize="15sp"
            android:textColor="#616161"
            android:gravity="center"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stay tuned for the next event day to unlock new rewards!"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FB8C00"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnGotItMissed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I'll be faster next time"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/boton_redondo_verde"
            app:backgroundTint="#000000"
            android:stateListAnimator="@null"
            android:elevation="0dp"
            android:textAllCaps="false"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>