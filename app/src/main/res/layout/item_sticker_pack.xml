<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="110dp"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:padding="4dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_pack_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#EEEEEE"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/badgeNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#D50000"
                app:cardCornerRadius="4dp"
                android:layout_gravity="top|start"
                android:layout_margin="4dp"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New"
                    android:textColor="#FFFFFF"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="2dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/badgeUpdated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#2196F3"
                app:cardCornerRadius="4dp"
                android:layout_gravity="top|start"
                android:layout_margin="4dp"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UPDATED"
                    android:textColor="#FFFFFF"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="2dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/badgePremium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFD700"
                app:cardCornerRadius="12dp"
                android:layout_gravity="top|end"
                android:layout_margin="4dp"
                android:visibility="gone">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_lock_lock"
                    android:padding="3dp"
                    app:tint="#000000"/>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/iconAdded"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_whatsapp_small"
                android:layout_gravity="bottom|end"
                android:layout_margin="5dp"
                android:visibility="gone"
                app:tint="#FFFFFF"
                android:elevation="4dp"/>

            <ImageView
                android:id="@+id/imgGiftOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:elevation="10dp"/>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_pack_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Nombre"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#000000"
        android:textSize="11sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-medium"/>

</LinearLayout>