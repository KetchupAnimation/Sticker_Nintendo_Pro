<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_heart_filled"
                app:tint="#FFD700"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/txtDialogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip Ad?"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txtDialogMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Use coins to unlock instantly."
                android:textSize="15sp"
                android:textColor="#757575"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:id="@+id/txtCurrentBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your balance: 0"
                android:textSize="12sp"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:background="#154CAF50"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"/>

            <Button
                android:id="@+id/btnUseCoins"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Use 3 Coins"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:backgroundTint="#000000"
                android:layout_marginTop="20dp"
                android:stateListAnimator="@null"/>

            <TextView
                android:id="@+id/btnWatchAd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No, Watch Ad"
                android:textColor="#757575"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>